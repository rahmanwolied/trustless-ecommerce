{
  "name": "trustless-ecommerce",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:push": "pnpm run --filter=@repo/db db:push",
    "db:generate": "pnpm run --filter=@repo/db db:generate",
    "db:studio": "pnpm run --filter=@repo/db db:studio",
    "db:seed": "pnpm run --filter=@repo/db db:seed",
    "ssi:deploy": "pnpm run --filter=@repo/ssi deploy"
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
